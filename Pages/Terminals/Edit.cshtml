@page
@model CronosegAccess.Pages.Terminals.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Terminal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Terminal.IdTerminal" />
            <div class="form-group">
                <label asp-for="Terminal.IdTerminal" class="control-label"></label>
                <div>@Html.DisplayFor(model => model.Terminal.IdTerminal)</div>
            </div>
            <div class="form-group">
                <label asp-for="Terminal.Name" class="control-label"></label>
                <input asp-for="Terminal.Name" class="form-control" />
                <span asp-validation-for="Terminal.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Terminal.Zone" class="control-label"></label>
                <select asp-for="Terminal.idZone" class="form-control"
                        asp-items="@Model.ZoneNameSL">
                    <option value="">-- Seleccionar Zona --</option>
                </select>
                <span asp-validation-for="Terminal.idZone" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
