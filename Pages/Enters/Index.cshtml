@page
@model CronosegAccess.Pages.Enters.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Fecha
            </th>
            <th>
                Hora
            </th>
            <th>
                Nombre
            </th>
            <th>
               Identificación
            </th>
            <th>
                Modo
            </th>
            <th>
                Resultado
            </th>
            <th>
                Terminal
            </th>
            <th>
                Longitud
            </th>
            <th>
                Latitud
            </th>
            <th>
                Zona
            </th>
            <th>
                Horario
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.accEnter) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user.FirstName + " " + item.user.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user.Uid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mode.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.result.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idTerminal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zone.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.schedule.Name)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.idEnter">Detalles</a>
            </td>
        </tr>
}
    </tbody>
</table>
